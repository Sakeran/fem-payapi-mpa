---
import Banking from "./icons/Banking.astro";
import Finance from "./icons/Finance.astro";
import Payments from "./icons/Payments.astro";

export interface Props {
    title: string;
    text: string;
    icon: "banking" | "payments" | "finance";
}

const { title, text, icon } = Astro.props as Props;
---

<div class="flex flex-col items-center basis-full">
    <>
        {icon === "banking" &&
        <Banking />}
    </>
    <>
        {icon === "payments" &&
        <Payments />}
    </>
    <>
        {icon === "finance" &&
        <Finance />}
    </>

    <h3 class="mt-8 text-4.5 font-bold font-sans text-blue-sj text-center -tracking-14 leading-h3-small">{title}</h3>
    <p class="mt-4 text-center text-15p text-blue-light-sj -tracking-12 max-w-[50ch]">{text}</p>
</div>